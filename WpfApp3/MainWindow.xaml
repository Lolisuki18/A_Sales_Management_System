        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid Margin="20">
        <DockPanel>
            <ListBox x:Name="Menu" SelectionChanged="Menu_SelectionChanged">
                <ListBoxItem Content="Customers"/>
                <ListBoxItem Content="Products"/>
                <ListBoxItem Content="Orders"/>
                <ListBoxItem Content="Reports"/>
            </ListBox>
            <ContentControl x:Name="MainContent" />
        </DockPanel>
    </Grid>
</Window>
